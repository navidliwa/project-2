<div class="container">
    <h1>Locations</h1>
</div>
<div class="container">
    <div class="card-deck d-flex flex-wrap justify-content-around align-content-around">
        {{#each locations as |location|}}
        <div class="card d-flex align-content-around">
            <div class="card-body">
                <div class="card-title"><a href="/location/{{location.id}}">{{location.name}}</a></div>
                <div class="card-text">
                    {{location.description}}
                </div>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal">Edit</button>
                <button class="location-delete btn btn-danger" data-id="{{location.id}}">Delete</button>
                <div class="modal" id="modal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form class="update-location-form">
                                <label for="name" class="form-label">Name</label>
                                <input type="text" id="name" class="form-control" value="{{location.name}}">
                                <label for="descritpion" class="form-label">Description</label>
                                <textarea type="text" id="description" class="form-control"
                                    value="{{location.description}}">{{location.description}}</textarea>
                                <label for="biome" class="form-label">Biome</label>
                                <input type="text" id="biome" class="form-control" value="{{location.biome}}">
                                <label for="places-of-interest" class="form-label">Places of Interest</label>
                                <textarea type="text" id="places-of-interest" class="form-control"
                                    value="{{location.places_of_interest}}">{{location.places_of_interest}}</textarea>
                                <label for="history" class="form-label">History</label>
                                <textarea type="text" id="history" class="form-control"
                                    value="{{location.history}}">{{location.history}}</textarea>
                                <label class="form-label" for="customFile">Default file input example</label>
                                <input type="file" class="form-control" id="customFile" />
                                <button class="update-location btn btn-primary" data-id="{{location.id}}">Save</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {{!-- <img src="{{location.image}}" alt="{{location.name}} image" class="card-img-bottom"> --}}
        </div>
        {{/each}}
    </div>
        <button class="btn btn-primary new" data-bs-toggle="modal" data-bs-target="#new-location">New Location</button>
</div>
<div class="modal fade" id="new-location">
    <div class="modal-dialog">
        <div class="modal-content container">
            <form>
                <label for="name" class="form-label">Name</label>
                <input type="text" id="name-create" class="form-control">
                <label for="descritpion" class="form-label">Description</label>
                <textarea type="text" id="description-create" class="form-control"></textarea>
                <label for="biome" class="form-label">Biome</label>
                <input type="text" id="biome-create" class="form-control">
                <label for="places-of-interest" class="form-label">Places of Interest</label>
                <input type="text" id="places-of-interest-create" class="form-control">
                <label for="history" class="form-label">History</label>
                <textarea type="text" id="history-create" class="form-control"></textarea>
                <label class="form-label" for="customFile">Image</label>
                <input type="file" class="form-control" id="customFile-create" />
                <button class="new-location btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>
</div>
<script src="./js/locations.js"></script>
<div class="container">
    <div class="card-deck">
        {{#each locations as |location|}}
        <div class="card">
            <div class="card-body">
                <div class="card-title">{{location.name}}</div>
                <div class="card-text">
                    {{location.description}}
                </div>
                <button class="btn btn-primary" href="/update/location/{{location.id}}" data-bs-toggle="modal"
                    data-bs-target="#modal">Edit</button>
                <button class="btn btn-danger" data-id="{{location.id}}">Delete</button>
                <div class="modal" id="modal">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form>
                                <label for="name" class="form-label">Name</label>
                                <input type="text" id="name" class="form-control" value="{{location.name}}">
                                <label for="descritpion" class="form-label">Description</label>
                                <textarea type="text" id="description" class="form-control"
                                    value="{{location.description}}">{{location.description}}</textarea>
                                <label for="biome" class="form-label">Biome</label>
                                <input type="text" id="biome" class="form-control" value="{{location.biome}}">
                                <label for="places_of_interest" class="form-label">Places of Interest</label>
                                <textarea type="text" id="places_of_interest" class="form-control"
                                    value="{{location.places_of_interest}}">{{location.places_of_interest}}</textarea>
                                <label for="history" class="form-label">History</label>
                                <textarea type="text" id="history" class="form-control"
                                    value="{{location.history}}">{{location.history}}</textarea>
                                <label class="form-label" for="customFile">Default file input example</label>
                                <input type="file" class="form-control" id="customFile" />
                                <button class="btn btn-primary">Save</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <img src="{{location.image}}" alt="{{location.name}} image" class="card-img-bottom">
        </div>
        {{/each}}
    </div>
</div>
<div class="container">
    <div class="card-group">
        {{#each locations as |location|}}
        <div class="card">
            <div class="card-body">
                <div class="card-title">{{location.name}}</div>
                <div class="card-text">
                    {{location.description}}
                </div>
                <a class="btn btn-primary" href="/update/location/{{location.id}}">Edit</a>
                <button class="btn btn-danger" data-id="{{location.id}}">Delete</button>
            </div>
            <img src="#" alt="" class="card-img-bottom">
        </div>
        {{/each}}
    </div>
</div>
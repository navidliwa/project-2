<div class="container">
    <div class="card-group">
        {{#each plots as |plot|}}
        <div class="card">
            <div class="card-body">
                <div class="card-title">{{plot.name}}</div>
                <div class="card-text">
                    {{plot.description}}
                </div>
                <a class="btn btn-primary" href="/update/plot/{{plot.id}}">Edit</a>
                <button class="btn btn-danger" data-id="{{plot.id}}">Delete</button>
            </div>
            <img src="{{plot.image}}" alt="{{plot.name}} image" class="card-img-bottom">
        </div>
        {{/each}}
    </div>
</div>
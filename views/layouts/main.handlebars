<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signpost</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body>
    <nav class="navbar navbar-expand navbar-dark bg-dark">
        {{!-- <h1>Signpost</h1> --}}
        <a href="/" class="navbar-brand">Title</a>
        <form class="d-flex" role="search">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn" type="submit">Search</button>
        </form>

        <!-- Conditionally render login or logout links -->
        <ul class="navbar-nav">
            {{#if logged_in}}
            <li class="nav-item">
                <a href="/plots" class="nav-link">Plots</a>
                {{!-- <button class="no-button" id="logout">logout</button> --}}
            </li>
            <li class="nav-item">
                <a href="/characters" class="nav-link">Characters</a>
                {{!-- <button class="no-button" id="logout">logout</button> --}}
            </li>
            <li class="nav-item">
                <a href="/locations" class="nav-link">Locations</a>
                {{!-- <button class="no-button" id="logout">logout</button> --}}
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link">logout</a>
            </li>
            {{else}}
            <li class="nav-item">
                <a href="/sign-up" class="nav-link"></a>
            </li>
            <li class="nav-item">
                <a href="/login" class="nav-link">login</a>
            </li>
            {{/if}}
        </ul>
    </nav>
    <main>
        <!-- Render the sub layout -->
        {{{ body }}}
    </main>
    <footer>

    </footer>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
    <script src="/js/logout.js"></script>
    {{/if}}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
</body>

</html>